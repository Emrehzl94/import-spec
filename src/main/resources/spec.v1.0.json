              }
            },
            "text_indexes": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/target.node.schema.indexes.text"
              }
            },
            "point_indexes": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/target.node.schema.indexes.point"
              }
            },
            "fulltext_indexes": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/target.node.schema.indexes.full-text"
              }
            },
            "vector_indexes": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/target.node.schema.indexes.vector"
              }
            }
          }
        }
      },
      "required": [
        "source",
        "name",
        "labels",
        "properties"
      ],
      "additionalProperties": false
    },
