            "float",
            "FLOAT",
            "float_array",
            "FLOAT_ARRAY",
            "integer",
            "INTEGER",
            "integer_array",
            "INTEGER_ARRAY",
            "local_datetime",
            "LOCAL_DATETIME",
            "local_datetime_array",
            "LOCAL_DATETIME_ARRAY",
            "local_time",
            "LOCAL_TIME",
            "local_time_array",
            "LOCAL_TIME_ARRAY",
            "point",
