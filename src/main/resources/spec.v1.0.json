{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neo4j.com/docs/common-content-dataflow/_attachments/schemas/spec.v1.0.json",
  "title": "Dataflow Flex Template for Google Cloud to Neo4j - Job Specification",
  "description": "Neo4j Import Job Specification",
  "type": "object",
  "properties": {
    "config": {
      "description": "Global settings",
      "type": "object"
    },
    "sources": {
      "description": "Data sources",
      "type": "array",
      "items": {
        "$ref": "#/$defs/source"
      },
      "minItems": 1
    },
    "targets": {
      "description": "Import targets",
      "type": "object",
      "properties": {
        "nodes": {
          "description": "Target specification of the nodes to import in batch",
          "type": "array",
          "items": {
            "$ref": "#/$defs/target.node"
          }
        },
        "relationships": {
          "description": "Target specification of the relationships to import in batch",
          "type": "array",
          "items": {
            "$ref": "#/$defs/target.relationship"
          }
        },
        "queries": {
          "description": "Import queries to run in batch",
          "type": "array",
          "items": {
            "$ref": "#/$defs/target.query"
          }
        }
      }
    },
    "actions": {
      "description": "One-off actions to execute",
      "type": "array",
      "items": {
        "$ref": "#/$defs/action"
      }
    }
  },
  "required": [
    "sources",
    "targets"
  ],
  "$defs": {
    "source": {
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        }
      },
      "oneOf": [
        {
          "$ref": "#/$defs/source.bigQuery"
        },
        {
          "$ref": "#/$defs/source.jdbc"
        },
        {
          "$ref": "#/$defs/source.text"
        }
      ],
      "required": [
        "name"
      ]
    },
    "source.bigQuery": {
      "properties": {
        "type": {
          "const": "bigquery"
        },
        "query": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "type",
        "query"
      ],
      "additionalProperties": false
    },
    "source.jdbc": {
      "properties": {
        "type": {
          "const": "jdbc"
        },
        "data_source": {
          "type": "string",
          "minLength": 1
        },
        "query": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "type",
        "data_source",
        "query"
      ],
      "additionalProperties": false
    },
    "source.text": {
      "properties": {
        "type": {
          "const": "text"
        },
        "header": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minLength": 1
        },
        "oneOf": [
          {
            "properties": {
              "urls": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "minItems": 1
              },
              "format": {
                "type": "string",
                "enum": [
                  "default",
                  "DEFAULT",
                  "excel",
                  "EXCEL",
                  "informix",
                  "INFORMIX",
                  "mongo",
                  "MONGO",
                  "mongo_tsv",
                  "MONGO_TSV",
                  "mysql",
                  "MYSQL",
                  "oracle",
                  "ORACLE",
                  "postgres",
                  "POSTGRES",
                  "postgresql_csv",
                  "POSTGRESQL_CSV",
                  "rfc4180",
                  "RFC4180"
                ]
              },
              "column_delimiter": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1
              },
              "line_separator": {
                "type": "string",
                "minLength": 1,
                "maxLength": 1
              }
            },
            "required": [
              "urls"
            ]
          },
          {
            "properties": {
              "data": {
                "type": "array",
                "items": {
                  "type": "array"
                }
              }
            },
            "required": [
              "header",
              "data"
            ]
          }
        ]
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    },
    "target.node": {
